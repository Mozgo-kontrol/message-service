{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./",
    "paths": {
    "@app/*": ["src/*"]
     },
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}